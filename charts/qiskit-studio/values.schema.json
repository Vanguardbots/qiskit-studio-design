{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Qiskit Studio Helm Chart Values",
  "description": "Schema for validating values.yaml for the qiskit-studio Helm chart",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "description": "Global settings for the qiskit-studio deployment",
      "properties": {
        "hostname": {
          "type": "string",
          "description": "Hostname for the deployment",
          "default": "localhost"
        },
        "scheme": {
          "type": "string",
          "description": "URL scheme (http or https)",
          "enum": ["http", "https"],
          "default": "http"
        },
        "additionalCORSOrigins": {
          "type": "array",
          "description": "Additional CORS origins to allow",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "llm": {
          "type": "object",
          "description": "LLM configuration settings",
          "properties": {
            "chat": {
              "type": "object",
              "description": "Chat LLM configuration",
              "properties": {
                "baseUrl": {
                  "type": "string",
                  "description": "Base URL for the LLM service"
                },
                "model": {
                  "type": "string",
                  "description": "LLM model to use for chat and code generation",
                  "default": "granite3.3:8b"
                },
                "secret": {
                  "type": "object",
                  "description": "Configuration for the secret containing the LLM API key",
                  "properties": {
                    "create": {
                      "type": "boolean",
                      "description": "Whether to create a new secret",
                      "default": false
                    },
                    "name": {
                      "type": "string",
                      "description": "Name of the secret"
                    },
                    "key": {
                      "type": "string",
                      "description": "Key within the secret that holds the API key",
                      "default": "apiKey"
                    },
                    "value": {
                      "type": "string",
                      "description": "Value for the LLM API key"
                    }
                  }
                }
              }
            },
            "embedding": {
              "type": "object",
              "description": "Embedding LLM configuration",
              "properties": {
                "baseUrl": {
                  "type": "string",
                  "description": "Base URL for the Embedding LLM service"
                },
                "model": {
                  "type": "string",
                  "description": "Embedding model to use",
                  "default": "nomic-embed-text"
                },
                "vectorSize": {
                  "type": "string",
                  "description": "Vector size for embeddings",
                  "default": "768"
                },
                "secret": {
                  "type": "object",
                  "description": "Configuration for the secret containing the Embedding LLM API key",
                  "properties": {
                    "create": {
                      "type": "boolean",
                      "description": "Whether to create a new secret",
                      "default": true
                    },
                    "name": {
                      "type": "string",
                      "description": "Name of the secret",
                      "default": "vllm-deployment-vllm-service-token"
                    },
                    "key": {
                      "type": "string",
                      "description": "Key within the secret that holds the API key",
                      "default": "apiKey"
                    },
                    "value": {
                      "type": "string",
                      "description": "Value for the Embedding LLM API key",
                      "default": "YOUR_EMBEDDING_API_KEY_HERE"
                    }
                  }
                }
              }
            },
            "initChecks": {
              "type": "object",
              "description": "Configuration for LLM init container checks",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "description": "Whether to enable init container checks",
                  "default": true
                }
              }
            }
          }
        },
        "imagePullSecrets": {
          "type": "object",
          "description": "Configuration for image pull secrets",
          "properties": {
            "create": {
              "type": "boolean",
              "description": "Whether to create the image pull secret",
              "default": false
            },
            "name": {
              "type": ["string", "null"],
              "description": "Name of the image pull secret"
            },
            "value": {
              "type": "string",
              "description": "Value of the image pull secret"
            }
          }
        }
      }
    },
    "extraEnvVars": {
      "type": "array",
      "description": "Additional environment variables to be added to all pods",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the environment variable"
          },
          "value": {
            "type": "string",
            "description": "Value of the environment variable"
          }
        }
      },
      "default": []
    },
    "frontend": {
      "type": "object",
      "description": "Frontend configuration",
      "properties": {
        "replicaCount": {
          "type": "integer",
          "description": "Number of frontend replicas",
          "minimum": 1,
          "default": 1
        },
        "image": {
          "type": "object",
          "description": "Frontend container image configuration",
          "properties": {
            "repository": {
              "type": "string",
              "description": "Image repository"
            },
            "tag": {
              "type": "string",
              "description": "Image tag"
            },
            "pullPolicy": {
              "type": "string",
              "description": "Image pull policy",
              "enum": ["Always", "IfNotPresent", "Never"],
              "default": "IfNotPresent"
            }
          },
          "required": ["repository", "tag"]
        },
        "service": {
          "type": "object",
          "description": "Frontend service configuration",
          "properties": {
            "type": {
              "type": "string",
              "description": "Service type",
              "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
              "default": "NodePort"
            },
            "port": {
              "type": "integer",
              "description": "Service port",
              "default": 3000
            },
            "nodePort": {
              "type": ["integer", "null"],
              "description": "NodePort to expose (if service type is NodePort)",
              "minimum": 30000,
              "maximum": 32767
            }
          }
        },
        "resources": {
          "type": "object",
          "description": "Resource requests and limits",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "description": "CPU request",
                  "default": "100m"
                },
                "memory": {
                  "type": "string",
                  "description": "Memory request",
                  "default": "128Mi"
                }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "description": "CPU limit",
                  "default": "200m"
                },
                "memory": {
                  "type": "string",
                  "description": "Memory limit",
                  "default": "256Mi"
                }
              }
            }
          }
        },
        "extraEnvVars": {
          "type": "array",
          "description": "Additional environment variables for the frontend pod",
          "items": {
            "type": "object",
            "required": ["name", "value"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the environment variable"
              },
              "value": {
                "type": "string",
                "description": "Value of the environment variable"
